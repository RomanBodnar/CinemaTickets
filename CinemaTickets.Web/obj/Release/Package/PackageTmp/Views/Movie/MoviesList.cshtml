@model IEnumerable<CinemaTickets.Domain.Entities.Movie>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Список фільмів";
}

        <div class="text-center">
            <h1>Список фільмів</h1>
        </div>
        <div class="panel-body">
            <table class="table table-condensed table-bordered">
                <tr>
                    <th class="text-right">ID</th>
                    <th>Name</th>
                    <th class="text-center">Actions</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-right">@item.Id</td>
                        <td>
                            @Html.ActionLink(item.Name, "EditMovie", new { movieId = item.Id })

                        </td>

                        <td class="text-center">
                            @using (Html.BeginForm("DeleteMovie", "Movie"))
                            {
                                @Html.Hidden("movieId", item.Id)
                                <input type="submit"
                                       class="btn btn-default btn-xs"
                                       value="Delete" />
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="add-footer">
            @Html.ActionLink("Додати фільм", "CreateMovie", null,
new { @class = "btn btn-primary" })
        </div>


