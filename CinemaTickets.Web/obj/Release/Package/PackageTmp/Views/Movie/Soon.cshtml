@model List<CinemaTickets.Domain.Entities.Movie>
@{
    ViewBag.Title = "Soon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="text-center">
    <h1>Незабаром в кінотеатрах</h1>
</div>
@foreach (var movie in Model)
{
    <div class="film col-md-6 clearfix">
        <div class="col-sm-6">
            @if (movie.ImageData == null)
            {
                <div class="form-control-static col-md-10">Постер відсутній</div>
            }
            else
            {
                @Html.Raw("<img src=\"data:" + movie.ImageMimeType + ";base64," + Convert.ToBase64String(movie.ImageData) + "\" />")
            }
            <div class="text-center">
                @Html.ActionLink(movie.Name, "MovieDetails", new { movieId = movie.Id })
            </div>
        </div>
        <div class="col-sm-6">
            <p>Тривалість: @movie.Duration <span> хв.</span></p>
            <p>Дата виходу: @movie.ReleaseDate.Date.ToShortDateString()</p>
        </div>
    </div>

}



<div class="clearfix"></div>
