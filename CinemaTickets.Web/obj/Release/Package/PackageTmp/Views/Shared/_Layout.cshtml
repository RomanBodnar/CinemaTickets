<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CinemaTickets</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    
    <link href="~/Content/bootstrap-theme-darkly.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
</head>
<body>
   @* <div class="top-menu container">
        <div class="text-center">
            <ul>
                <li><a href="#">Реєстрація</a></li>
                <li><a href="#">Вхід</a></li>
            </ul>
        </div>
    </div>*@
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
    <div class="name container">
        <div class="col-sm-12">
            <h1 class="site-logo">CinemaTickets</h1>
        </div>
    </div>
    <div class="main-menu">
        <div class="container">
            <div class="vertical-align">
                <div class="col-sm-3 col-md-4">
                    <!-- <div class="form-group">
                         <input type="text" class="form-control" placeholder="Знайти">
                     </div>-->
                </div>
                <div class="col-sm-9 col-md-8 text-center">
                    <ul>
                        @*temporary links. Must be replaced with non-admin views*@
                        <li>@Html.ActionLink("Фільми", "Movies", "Movie", null, null)</li>
                        <li>@Html.ActionLink("Кінотеатри", "Cinemas", "Cinema", null, null)</li>
                        <li>@Html.ActionLink("Незабаром", "Soon", "Movie", null, null)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    
    <div class="container">
       
            <div class="main-container">
                

                    @RenderBody()
                
                </div>
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - CinemaTickets</p>
                </footer>
            
      
    </div>
            <div class="container">
                <div class="text-center">
                    <a class="support" href="#">Підтримка</a>
                </div>
            </div>
            <script src="~/Scripts/jquery-2.1.3.min.js"></script>
            <script src="~/Scripts/bootstrap.min.js"></script>

            <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
            <script type="text/javascript">
                $(function () {
                    if (!Modernizr.inputtypes.date) {
                        $(function () {
                            $("input[type='date']")
                                        .datepicker({ dateFormat: 'dd/mm/yy' })
                                        .get(0);
                        })
                    }
                });
            </script>
</body>
</html>