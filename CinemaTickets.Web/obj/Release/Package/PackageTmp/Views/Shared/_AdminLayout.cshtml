<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet"/>
    <script href="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <title></title>

</head>
<body>
    <div class="name container">
        <div class="col-sm-12">
            <h1 class="site-logo">@Html.ActionLink("CinemaTickets", "Index", "Home"). Адміністративна частина</h1>
        </div>
    </div>
    <div class="main-menu">
        <div class="container">
            <div class="vertical-align">
                <div class="col-sm-3 col-md-4">
                    <!-- <div class="form-group">
                         <input type="text" class="form-control" placeholder="Знайти">
                     </div>-->
                </div>
                <div class="col-sm-9 col-md-8 text-center">
                    <ul>
                        @*temporary links. Must be replaced with non-admin views*@
                        <li>@Html.ActionLink("Фільми", "MoviesList", "Movie", null, null)</li>
                        <li>@Html.ActionLink("Кінотеатри", "CinemasList", "Cinema", null, null)</li>
                        <li>@Html.ActionLink("Список адміністраторів", "Index", "Admin")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @RenderBody()
    </div>
</body>
</html>
