@model CinemaTickets.Web.Models.SeanceViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Додати сеанси в кінотеатрі " + Model.CinemaName;
}

<h2>Додати сеанси в кінотеатрі @Model.CinemaName</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <fieldset>
            <div class="form-group">
                <label class="control-label col-md-2">Початкова дата:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Кінцева дата:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Час:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Halls">Зал:</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Hall_ID, ViewBag.Halls as SelectList, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Hall_ID)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="Movies">Фільм:</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Movie_ID, ViewBag.Movies as SelectList, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Movie_ID)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Ціна:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <input type="submit" value="Додати" class="btn btn-primary" />
        </fieldset>
    </div>
}

