<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - CinemaTickets.Administration</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
   
    <link href="~/Content/style.css" rel="stylesheet"/>
    
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src=".~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    

</head>
<body>
    <div class="name container">
        <div class="col-sm-12">
            <h1 class="site-logo">@Html.ActionLink("CinemaTickets", "Index", "Home"). Адміністративна частина</h1>
        </div>
    </div>
    <div class="main-menu">
        <div class="container">
            <div class="vertical-align">
                <div class="col-sm-3 col-md-4">
                    <!-- <div class="form-group">
                         <input type="text" class="form-control" placeholder="Знайти">
                     </div>-->
                </div>
                <div class="col-sm-9 col-md-8 text-center">
                    <ul>
                        @*temporary links. Must be replaced with non-admin views*@
                        <li>@Html.ActionLink("Фільми", "MoviesList", "Movie", null, null)</li>
                        <li>@Html.ActionLink("Кінотеатри", "CinemasList", "Cinema", null, null)</li>
                        <li>@Html.ActionLink("Список адміністраторів", "Index", "Admin")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @RenderBody()
    </div>
    <script src="../Scripts/jquery-2.1.3.min.js"></script>
    <script src="../Scripts/bootstrap.min.js"></script>

    <script src="../Scripts/jquery-ui-1.11.4.min.js"></script>
    <script type="text/javascript">
        $(function () {
            if (!Modernizr.inputtypes.date) {
                $(function () {
                    $("input[type='date']")
                                .datepicker({ dateFormat: 'dd/mm/yy' }, $.datepicker.regional["uk"])
                                .get(0);
                    $.datepicker.regional['uk'] = {
                        closeText: 'Закрити',
                       
                        currentText: 'Сьогодні',
                        monthNames: ['Січень', 'Лютий', 'Березень', 'Квітень', 'Травень', 'Червень',
                        'Липень', 'Серпень', 'Вересень', 'Жовтень', 'Листовад', 'Грудень'],
                        monthNamesShort: ['Січ', 'Лют', 'Бер', 'Квіт', 'Трав', 'Черв',
                        'Лип', 'Серп', 'Вер', 'Жовт', 'Лист', 'Груд'],
                        dayNames: ['неділя', 'понеділок', 'вівторок', 'середа', 'четвер', 'п’ятница', 'субота'],
                        dayNamesShort: ['нед', 'пнд', 'втр', 'срд', 'чтв', 'птн', 'сбт'],
                        dayNamesMin: ['Нд', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб'],
                        weekHeader: 'Не',
                        dateFormat: 'dd.mm.yy',
                        firstDay: 1,
                        isRTL: false,
                        showMonthAfterYear: false,
                        yearSuffix: ''
                    };
                    $.datepicker.setDefaults($.datepicker.regional['uk']);
                })
            }
        });
    </script>
 </body>
</html>
