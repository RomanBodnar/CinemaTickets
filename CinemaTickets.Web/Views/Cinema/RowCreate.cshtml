@model CinemaTickets.Domain.Entities.Row

@using (Html.BeginForm("CreateHall", "Cinema"))
{
    <div class="form-horizontal">
        <fieldset id="rowSet">
            @Html.HiddenFor(model => model.Id)
            @Html.EditorFor(model => model.HallId, new { htmlAttributes = new { @type = "hidden" } })

            <div class="form-group">
                <label class="control-label col-md-2">Назва:</label>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.Number)
                    @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Кількість місць:</label>
                <div class="col-md-10">
                    @Html.ValidationMessageFor(model => model.Seats)
                    @Html.EditorFor(model => model.Seats, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <input type="submit" value="Додати" class="btn btn-primary" />
            @Html.ActionLink("Додати ще один ряд", "#", null, new { @class = "addLink" })
            @Html.ActionLink("Відміти і повернутись до списку", "ViewRows", new { hallId = Model.HallId }, new { @class = "btn btn-default" })
        </fieldset>
    </div>
}