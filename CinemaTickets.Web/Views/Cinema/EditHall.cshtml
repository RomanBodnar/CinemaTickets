@model CinemaTickets.Domain.Entities.Hall

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Редагувати інформаію про зал";
}

<h2>Редагувати інформаію про зал @Model.Name</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <fieldset>
            @Html.HiddenFor(model => model.Id)
            @Html.EditorFor(model => model.CinemaId, new { htmlAttributes = new { @type = "hidden" } })
            @*Html.HiddenFor(model => model.CinemaId, new { value = Model.CinemaId })*@
            <div class="form-group">
                <label class="control-label col-md-2">Назва:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Кількість місць:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Seats, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <input type="submit" value="Зберегти" class="btn btn-primary" />
            @Html.ActionLink("Відміти і повернутись до списку", "ViewHalls", new { cinemaId = Model.CinemaId }, new { @class = "btn btn-default" })
        </fieldset>
    </div>
}


